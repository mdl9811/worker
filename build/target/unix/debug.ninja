OPT_DBGINFO = -g


OPT_CFLAGS = -Wall $ARCH_CFLAGS $TARGET_CFLAGS -O0 $
  -DUSE_UDEV -DUSE_AURA=1 -DUSE_OZONE=1 -D_FILE_OFFSET_BITS=64 $
  -D_LARGEFILE_SOURCE -D_LARGEFILE64_SOURCE -D_GNU_SOURCE $
  -D_DEBUG -DDEBUG $CONF_CFLAGS $OPT_DBGINFO -fno-exceptions -fno-rtti

OPT_LDFLAGS = $ARCH_LDFLAGS

RUST_OPT_CFLAGS = -g $RUSTC_FLAGS

CR_LDFLAGS = $CR_LDFLAGS
